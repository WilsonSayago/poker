<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Play to Poker!</h2>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-md-6">
      <button type="button" class="btn btn-success">Success</button>
    </div>
    <div class="col-md-6">
      <button type="button" class="btn btn-info">Info</button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>Hand number one</h4>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Carts</th>
          </tr>
        </thead>
        <tbody>
          <% @mano1.each_with_index do |card,index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= card[:number] + "-" + card[:suit] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <h4>Hand number two</h4>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Carts</th>
          </tr>
        </thead>
        <tbody>
          <% @mano2.each_with_index do |card,index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= card[:number] + "-" + card[:suit] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

