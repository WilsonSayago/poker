<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Play to Poker!</h2>
    </div>
  </div>
  <div class="row">
    <h1 class="red"><p><%= @message  %></p></h1>
  </div>
  <div class="row text-center">
    <div class="col-md-6">
      <%= link_to "Restart game", restart_game_pokers_path, class: "btn btn-info" %>
    </div>
    <div class="col-md-6">
      <%= link_to "Next Hand", "/", class: "btn btn-info" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>Hand number one</h4>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Carts</th>
          </tr>
        </thead>
        <tbody>
          <% @mano1.each_with_index do |card,index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= card['number'] + '-' +  card['suit'] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <h4>Hand number two</h4>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Carts</th>
          </tr>
        </thead>
        <tbody>
          <% @mano2.each_with_index do |card,index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= card['number'] + '-' +  card['suit'] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

